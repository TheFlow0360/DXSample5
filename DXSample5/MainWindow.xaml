<dx:DXWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             x:Class="DXSample5.MainWindow"
             Title="MainWindow"
             Height="350"
             Width="525">
    <DockPanel>
        <TextBlock DockPanel.Dock="Bottom" Text="{Binding ElementName=Grid, Path=FilterCriteria}" />
        <dxg:GridControl x:Name="Grid" AutoGenerateColumns="None">
            <dxg:GridControl.View>
                <dxg:TableView />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </DockPanel>
</dx:DXWindow>
